<div class="row">


  <% if current_user.house != nil  && current_user.house.tasks.count > 0 %>

    <div class="col-lg-5 shadow-lg p-3 mb-5 rounded" id="task-container-1">
      <h1>Unfinished Tasks</h1>
        <div class="dropdown">
          <div class="text-right">
            Sort By
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Default
            </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Roomate</a>
                <a class="dropdown-item" href="#">Date</a>
                <a class="dropdown-item" href="#">Importance</a>
              </div>
            </div>

          </div>
          <ul class="list-group">
            <% @tasks.each do |task| %>
              <%if !task.completed %>
                <li class="list-group-item list-group-item-light text-left">
                    <%= link_to task.title, task_path(task), class: "text-info" %>
                    <small>Assigned To : <%= User.find(task.assignedUser).firstName%> </small>
                    <div class="text-right">
                      <% if logged_in? && task.assignedUser == current_user.id %>
                        <%= link_to "Complete", task_path(task) %>
                      <% end %>
                      <strong>Assigned </strong><%=  task.startDate.strftime("%B %e, %Y") %>




                    </div>

                </li>
              <% end %>
            <% end %>
          </ul>
          <br>

    </div>

    <div class="col-lg-5 shadow-lg p-3 mb-5 rounded" id="task-container-1">
      <h1>Pending Approval</h1>
        <div class="dropdown">
          <div class="text-right">
            Sort By
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Default
            </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Roomate</a>
                <a class="dropdown-item" href="#">Date</a>
                <a class="dropdown-item" href="#">Importance</a>
              </div>
            </div>

          </div>
          <ul class="list-group">
            <% @tasks.each do |task| %>
              <%if !task.approved && task.completed %>
                <li class="list-group-item list-group-item-light text-left">
                    <%= link_to task.title, task_path(task), class: "text-info" %>
                    <small>Assigned To : <%= User.find(task.assignedUser).firstName%> </small>
                    <div class="text-right">
                      <%=  task.startDate.strftime("%B %e, %Y") %>
                      <% if logged_in? && task.assignedUser == current_user.id %>
                        <%= link_to "Complete", task_path(task) %> -
                      <% end %>
                      <%= task.dueDate.strftime("%B %e, %Y") %>


                    </div>

                </li>
              <% end %>
            <% end %>
          </ul>
          <br>

    </div>

    <div class="col-lg-5 shadow-lg p-3 mb-5 rounded" id="task-container-1">
      <h1>Roomates</h1>
        <div class="dropdown">


          </div>
          <ul class="list-group">
            <% @users.each do |user| %>

                <li class="list-group-item list-group-item-light text-left">
                    <%= user.firstName %> <%= user.lastName %>

                    <div class="text-right">


                      <%= link_to "Kick Roomate", removeFromHouse_path(:user => user.id), class: "text-black btn btn-danger btn-large btn-outline-dark", data: {confirm:"Are you sure? This will kick the roomate from the house"} %>

                    </div>

                </li>

            <% end %>
          </ul>
          <br>

    </div>
    <% else %>
    <% end %>
  </div>
