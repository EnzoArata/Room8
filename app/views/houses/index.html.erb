<div class = "container-fluid text-center" id="page-content">



  <div class="row">
    <div class="col-lg-5 shadow-lg p-3 mb-5 rounded" id="task-container-1">
      <h1>All Accounts</h1>
        <div class="dropdown">
          <div class="text-right">
            Sort By
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Default
            </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Roomate</a>
                <a class="dropdown-item" href="#">Date</a>
                <a class="dropdown-item" href="#">Importance</a>
              </div>
            </div>

          </div>
          <ul class="list-group">
            <% @houses.each do |house| %>

                  <li class="list-group-item list-group-item-light">
                      <h2><strong><%=  house.name %></strong></h2>

                      <%if current_user.house == nil %>
                          <div class="text-right">

                            <%= link_to "Ask to Join House", addRequest_path(:house => house.id), class: "text-black btn btn-primary btn-large btn-outline-dark" %>

                          </div>
                        <% end %>
                        <% if current_user.admin %>
                          <%= link_to "Delete House", house_path(house),class: "text-black btn btn-danger btn-large btn-outline-dark", method: :DELETE, data: {confirm:"Are you sure? This will delete the house"}  %>
                        <% end %>
                        <% if house.users.count > 0 %>

                          <div class="text-right">

                              <p><strong><%= house.users.count %> people live here</strong></p>

                          </div>
                        <% else %>
                        <div class="text-right">

                            <p><strong>Nobody lives here</strong></p>

                        </div>
                        <% end %>


                  </li>

            <% end %>
          </ul>
          <br>

    </div>

  </div>



</div>
