<div class = "container-fluid text-center" id="page-content">

  <h1><strong>Login to GoodRoomate</strong></h1>


  <div class="container rounded" id="task-container-1">
    <br>

    <%= form_with(scope: :session, url: login_path, local: true ) do |f| %>



      <div class="form-group row">
        <%= f.label :Email, class: "col-2 col-form-label" %><br>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Password, class: "col-2 col-form-label" %><br>
        <div class="col-10">
          <%= f.text_area :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>





      <p class = "text-center">
        <%= f.submit "Log in", class: "text-black btn btn-secondary btn-large btn-outline-light" %>
      </p>
    <% end %>
  <br>
  </div>



</div>
